/* pages/category/category.wxss */
page {
  height: 100%;
  background-color: #f1f1f1 !important;
}
.weui-vtabs {
  box-sizing: border-box;
}
.vtabs-content {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: inherit;
  align-content: flex-start;
  border-bottom: #ebebeb 2rpx solid;
  margin: 10rpx 0;
  height: 100vh;
}

.vtabs-content-item {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 230rpx;
  height: 300rpx;
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 10rpx 10rpx;
  box-shadow: #f1f1f1 10rpx 10rpx 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.vtabs-content-item:hover {
  box-shadow: #cecece 15rpx 15rpx 15rpx;
}

.vtabs-content-item-img-box {
  width: 200rpx;
  height: 200rpx;
}
.vtabs-content-item-text {
  margin-top: 20rpx;
  color: #333;
  height: 80rpx;
  text-align: center;
}
