<!--pages/detail/detail.wxml-->
<swiper indicator-dots autoplay class="swiperBox">
  <swiper-item
    class="swiperItem"
    wx:for="{{ detailData.slides }}"
    wx:key="index"
  >
    <image
      class="swiperItemImg"
      mode="aspectFit"
      src="http://localhost:5000{{ item }}"
      bindtap="previewImg"
      data-current="http://localhost:5000{{ item }}"
    />
  </swiper-item>
</swiper>
<!-- tabs -->
<van-tabs
  animated
  line-width="370rpx"
  line-height="4rpx"
  sticky
  title-active-color="#FF4747"
  nav-class="tabTitle"
>
  <van-tab title="商品详情" class="tabDesc">
    <image
      wx:for="{{ detailData.desc }}"
      wx:key="index"
      class="tabImage"
      mode="widthFix"
      src="{{ item }}"
      alt=""
    />
  </van-tab>
  <van-tab name="tabcomments" title="用户评价">
    <view class="tabComments" wx:for="{{ commentsData }}" wx:key="index">
      <view class="tabNameBox">
        <view class="tabNameLeft">
          <image
            mode="widthFix"
            class="tabNameImg"
            src="http://localhost:5000{{ item.userImageUrl }}"
            alt=""
          />
          <view class="tabName">
            {{ item.nickname }}
          </view>
        </view>

        <view
          class="tabNameTime"
          selectable="false"
          space="false"
          decode="false"
        >
          {{ item.creationTime }}
        </view>
      </view>
      <view class="tabContentBox">
        <view class="tabContentrateBox">
          <van-rate value="{{ item.score }}" bind:change="onChange"></van-rate>
          <view> 评分：{{ item.score }}分 </view>
        </view>

        <view class="tabContent">
          {{ item.content }}
        </view>
        <view class="tabContentImgBox">
          <image
            class="tabContentImg"
            src="http://localhost:5000{{ item.imgUrl }}"
            mode="aspectFit"
            lazy-load="true"
          >
          </image>
        </view>
      </view>
    </view>
  </van-tab>
</van-tabs>
<!-- cart -->
<van-goods-action>
  <van-goods-action-icon icon="cart-o" text="购物车" bind:click="onClickIcon" />
  <van-goods-action-button
    text="加入购物车"
    type="warning"
    bind:click="onClickButton"
  />
  <van-goods-action-button text="立即购买" bind:click="onClickButton" />
</van-goods-action>
